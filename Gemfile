  gem 'sqlite3'
  gem 'rspec-rails'
end

group :test do
  gem 'selenium-webdriver'
  gem 'capybara'
end

group :development do
  gem 'spring'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end

group :doc do
  gem 'sdoc', require: false
end

gem 'sass-rails', '~>4.0.3'
gem 'uglifier'
gem 'coffee-rails'
